<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOOP FOR ORDER QUEUE -->
        <div class="col-sm-6">
            <div class="well">

                <h3>Order Queue</h3>
                <ul class="messages">

                <% for(var i=0; i<messages.length; i++) {%>

                  <li class="message">
                    <!--User Name -->
                    <span><%= messages[i].name %></span>

                    <!--User Order -->
                    <span><%= messages[i].order %></span>
                    <button class="completeButton" type="submit" name="completed">Order Complete</button>
                    <span><i class="fa fa-trash" aria-hidden="true"></i></span>
                  </li>
                <% } %>
                </ul>
              </ul>

            </div>
        </div>



  <!--Completed Orders List right side -->

        <section class="baristaAddOrders">
          <h3><span class="fa fa-user"></span>Completed orders</h3>

          <!-- listed queue of completed orders -->

          <ul class="messages">

          <% for(var i=0; i<messages.length; i++) {%>
            <!-- Class of the items to be posted .complete (what is the name of complete, what is it?)  -->
            <% if(messages[i].complete === true){ %>
            <li class="message">
              <!--User Name -->
              <span><%= messages[i].name %></span>

              <!--User Order -->
              <span><%= messages[i].order %></span>
              <span><%= messages[i].thumbUp %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>
            <%}%>

        </section>

</div>

<script src="main.js"></script>

</body>
</html>
